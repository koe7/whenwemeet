      <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="newEventModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <form role="form" action="/time/save">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">새로운 일정</h4>
        </div>
        <div class="modal-body">
          <input type="text" name="content" placeholder="일정 이름"></input>
          <input type="hidden" id="newEventBegins" name="begins" ></input>
          <input type="hidden" id="newEventEnds" name="ends" ></input>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">취소</button>
          <button type="submit" class="btn btn-primary" >일정 추가</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  var newEvent = null;
  $(document).ready(function() {
    $("[id^='calendar']").each(function (i, el) {
      $(el).fullCalendar({
        defaultView: 'agendaWeek',
        allDaySlot: false,
        slotDuration: '00:30:00',
        slotLabelFormat: 'H:mm',
        minTime: '07:00:00',
        columnFormat: 'ddd',
        editable: true,
        contentHeight: 'auto',
        header: false,
        editable: true,
        dayClick: function(date, jsEvent, view) {
          endTime = moment(date);
          endTime.hours(endTime.hours() + 1);
          openNewEventModal(date, endTime)
          events = [
            {
              title: 'test_event',
              start: date.format()
            }
          ];

          $('#calendar').fullCalendar('addEventSource', events);
        },
        eventRender: function(event, element) {
          delete_btn = "<span class='glyphicon glyphicon-trash' aria-hidden='true'></span>";
          element.append(delete_btn);
        }
      });
    });
  });

  function openNewEventModal(startTime, endTime) {
    begins = startTime.hours() * 2 + startTime.minutes() / 30;
    ends = endTime.hours() * 2 + endTime.minutes() / 30 - 1;
    $('#newEventBegins').val("" + begins);
    $('#newEventEnds').val("" + ends);

    $('#newEventModal').modal({
      show: 'true'
    }); 
  }

  function addEvent() {
    alert($('#newEventName').val());
  }
</script>
