          </form>
          <div class="list-group-item">
            <h4>공유 시간표</h4>
          </div>
      <% if user_signed_in? %>
        <% current_user.user_groups.each do |x| %>
          <form action="destroy/<%=x.id%>" data-post_id="<%=x.id%>" class="list-group-item" method="POST">
